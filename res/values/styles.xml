<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" >
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="SwipeBackLayout">
        <item name="edge_size">30dip</item>
        <item name="shadow_left">@drawable/shadow_left</item>
        <item name="shadow_right">@drawable/shadow_right</item>
        <item name="shadow_bottom">@drawable/shadow_bottom</item>
    </style>

    <style name="TextViewSize">
        <item name="android:textSize">20dip</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="EditTextSize">
        <item name="android:textSize">30dip</item>
        <item name="android:textColor">#66CCFF</item>
    </style>

</resources>